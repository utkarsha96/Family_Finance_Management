<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ExpensesActivity">


    <TextView
        android:id="@+id/total_expenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Total Expenses:"/>

    <TextView
        android:id="@+id/show_total_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/total_expenses"
        android:hint="Expenses"
        android:padding="20dp"/>


    <TextView
        android:id="@+id/expense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Expense Name:"
        android:layout_below="@+id/total_expenses"/>

    <EditText
        android:id="@+id/edit_expense_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expense_name"
        android:hint="Enter expense name "
        android:inputType="text"
        android:layout_below="@+id/show_total_expenses"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/expense_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Expense Amount:"
        android:layout_below="@+id/expense_name"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_expense_name"
        android:layout_toRightOf="@+id/expense_amount"
        android:hint="Enter expense amount "
        android:inputType="number"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/save_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_below="@+id/expense_amount"/>

</RelativeLayout>